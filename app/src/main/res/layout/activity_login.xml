<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">
    <FrameLayout
        android:id="@+id/login_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_logo_school_full"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/login_username_base"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginTop="900dp"
                android:layout_gravity="center_horizontal"
                app:cardBackgroundColor="@color/color_login_input"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:visibility="invisible"
                        android:scaleType="centerCrop"
                        android:padding="2dp"
                        android:src="@drawable/pass_visible"
                        tools:ignore="ContentDescription" />
                    <EditText
                        android:id="@+id/login_username"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="@string/text_username_edit"
                        android:inputType="number"
                        android:singleLine="true"
                        android:gravity="center"
                        android:background="@null"
                        tools:ignore="Autofill" />
                    <ImageView
                        android:id="@+id/login_username_clear"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        android:visibility="invisible"
                        android:scaleType="centerCrop"
                        android:tint="@color/color_login_tint"
                        android:src="@drawable/ic_edit_clear"
                        tools:ignore="ContentDescription" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/login_password_base"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/color_login_input"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp">
                    <ImageView
                        android:id="@+id/login_password_visible"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:padding="2dp"
                        android:visibility="invisible"
                        android:scaleType="centerCrop"
                        android:tint="@color/color_login_tint"
                        android:src="@drawable/pass_invisible"
                        tools:ignore="ContentDescription" />
                    <EditText
                        android:id="@+id/login_password"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="@string/text_password_edit"
                        android:inputType="textPassword"
                        android:gravity="center"
                        android:singleLine="true"
                        android:background="@null"
                        android:imeActionLabel="登录"
                        android:imeOptions="actionDone"
                        tools:ignore="Autofill" />
                    <ImageView
                        android:id="@+id/login_password_clear"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        android:visibility="invisible"
                        android:scaleType="centerCrop"
                        android:tint="@color/color_login_tint"
                        android:src="@drawable/ic_edit_clear"
                        tools:ignore="ContentDescription" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/login_action_base"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                app:cardElevation="0dp"
                app:cardCornerRadius="35dp"
                app:cardBackgroundColor="@color/colorPrimary">

                <ImageView
                    android:id="@+id/login_action"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:tint="#FFFFFF"
                    android:src="@drawable/ic_login_action"
                    tools:ignore="ContentDescription" />

                <ProgressBar
                    android:id="@+id/login_loading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:visibility="invisible"
                    android:indeterminateTintMode="src_atop"
                    android:indeterminateTint="#FFFFFF"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/login_action_cover"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </FrameLayout>


    <LinearLayout
        android:id="@+id/login_permission"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="64dp"
            android:text="@string/permission_title"
            android:textSize="25sp"
            android:textColor="@color/color_permission_title" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:text="@string/permission_detail"
            android:textSize="15sp"
            android:textColor="@color/color_permission_title" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="@string/permission_title_phone_state"
                        android:textSize="18sp"
                        android:textColor="@color/color_permission_title" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/permission_content_phone_state"
                        android:textSize="13sp"
                        android:textColor="@color/color_permission_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="@string/permission_title_write_external"
                        android:textSize="18sp"
                        android:textColor="@color/color_permission_title" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/permission_content_write_external"
                        android:textSize="13sp"
                        android:textColor="@color/color_permission_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="@string/permission_title_write_calendar"
                        android:textSize="18sp"
                        android:textColor="@color/color_permission_title" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/permission_content_write_calendar"
                        android:textSize="13sp"
                        android:textColor="@color/color_permission_content" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_margin="30dp"
            app:cardCornerRadius="23dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/color_button_alert">
            <TextView
                android:id="@+id/login_button_access"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:text="@string/permission_granted"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>