<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWindowBackground"
    tools:context=".activity.MyInfo">
    <FrameLayout
        android:id="@+id/info_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/info_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_gravity="start"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            app:tint="@color/color_font_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/title_info"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/color_font_normal"/>
    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorWindowBackgroundDark">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/info_avatar_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:background="@color/colorWindowBackground"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/title_info_avatar"
                    android:textSize="18sp"
                    android:textColor="@color/color_font_normal"
                    android:gravity="center_vertical"
                    android:textStyle="bold"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginStart="16dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="32dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/drawable_avatar"
                        android:scaleType="centerCrop"
                        tools:ignore="ContentDescription" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/info_name_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:background="@color/colorWindowBackground"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/title_info_name"
                    android:textSize="18sp"
                    android:textColor="@color/color_font_normal"
                    android:gravity="center_vertical"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/color_font_dark"
                    android:gravity="center_vertical" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/info_uid_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:background="@color/colorWindowBackground"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/info_uid_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/title_info_uid_student"
                    android:textSize="18sp"
                    android:textColor="@color/color_font_normal"
                    android:gravity="center_vertical"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/info_uid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/color_font_dark"
                    android:gravity="center_vertical" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/info_faculty_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:background="@color/colorWindowBackground"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/title_info_faculty"
                    android:textSize="18sp"
                    android:textColor="@color/color_font_normal"
                    android:gravity="center_vertical"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/info_faculty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/color_font_dark"
                    android:gravity="center_vertical" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/info_specialty_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:background="@color/colorWindowBackground"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/title_info_specialty"
                    android:textSize="18sp"
                    android:textColor="@color/color_font_normal"
                    android:gravity="center_vertical"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/info_specialty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/color_font_dark"
                    android:gravity="center_vertical" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/info_class_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:background="@color/colorWindowBackground"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/title_info_class"
                    android:textSize="18sp"
                    android:textColor="@color/color_font_normal"
                    android:gravity="center_vertical"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/info_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/color_font_dark"
                    android:gravity="center_vertical" />
            </LinearLayout>
            <TextView
                android:id="@+id/info_privacy_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@color/colorWindowBackground"
                android:text="@string/title_privacy"
                android:textSize="16sp"
                android:textColor="@color/color_font_normal"/>
            <TextView
                android:id="@+id/info_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@color/colorWindowBackground"
                android:text="@string/title_logout"
                android:textSize="16sp"
                android:textColor="@color/color_font_normal"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>