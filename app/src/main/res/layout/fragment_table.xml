<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:layout_marginBottom="5dp">

    <TextView
        android:id="@+id/table_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/title_timetable"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/color_font_normal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/table_pre"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="4dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:src="@drawable/ic_pre"
            tools:ignore="ContentDescription"
            app:tint="@color/color_font_dark" />
        <TextView
            android:id="@+id/table_week"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"/>
        <ImageView
            android:id="@+id/table_next"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="4dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:src="@drawable/ic_next"
            tools:ignore="ContentDescription"
            app:tint="@color/color_font_dark" />
    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="6"
        android:rowCount="4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/text_monday"
            android:textSize="14sp"
            android:textColor="@color/color_table_title"
            android:textStyle="bold"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/text_tuesday"
            android:textSize="14sp"
            android:textColor="@color/color_table_title"
            android:textStyle="bold"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/text_wednesday"
            android:textSize="14sp"
            android:textColor="@color/color_table_title"
            android:textStyle="bold"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/text_thursday"
            android:textSize="14sp"
            android:textColor="@color/color_table_title"
            android:textStyle="bold"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/text_friday"
            android:textSize="14sp"
            android:textColor="@color/color_table_title"
            android:textStyle="bold"
            android:layout_row="3"
            android:layout_column="4"
            android:layout_columnWeight="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/text_saturday"
            android:textSize="14sp"
            android:textColor="@color/color_table_title"
            android:textStyle="bold"
            android:layout_row="3"
            android:layout_column="5"
            android:layout_columnWeight="1" />
    </GridLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/timetable_refresh"
        android:layout_marginTop="3dp"
        android:paddingTop="3dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:overScrollMode="never">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/timetable_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="64dp"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <GridLayout
                        android:id="@+id/timetable_grid_morning"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:rowCount="2"
                        android:columnCount="6" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="@string/text_lunch"
                        android:textColor="#888888"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                    <GridLayout
                        android:id="@+id/timetable_grid_noon"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:rowCount="2"
                        android:columnCount="6" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="@string/text_dinner"
                        android:textColor="#888888"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <GridLayout
                        android:id="@+id/timetable_grid_evening"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:rowCount="1"
                        android:columnCount="6" />
                    <TextView
                        android:id="@+id/timetable_index"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:visibility="gone"
                        android:text="@string/text_table_next"
                        android:textColor="@color/color_table_index"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:layout_margin="6dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/timetable_empty"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/text_table_empty"
                    android:textColor="@color/color_table_index"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="16sp"/>
            </FrameLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>