<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Achievement">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/achievement_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:layout_gravity="start"
                android:tint="@color/color_font_normal"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/title_achievement_search"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/color_font_normal"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/achievement_year"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp" />

            <Spinner
                android:id="@+id/achievement_term"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                app:cardElevation="0dp"
                app:cardCornerRadius="19dp"
                app:cardBackgroundColor="@color/colorAlert">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/text_achievement_search"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimaryDark"/>
                <LinearLayout
                    android:id="@+id/achievement_action"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/achievement_refresh">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:scrollbars="none"
                android:overScrollMode="never">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="9"
                            android:text="@string/text_achievement_name"
                            android:textSize="14sp"
                            android:textColor="@color/color_table_title"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:text="@string/text_achievement_achievement"
                            android:textSize="14sp"
                            android:textColor="@color/color_table_title"
                            android:textStyle="bold"
                            android:gravity="center" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:text="@string/text_achievement_achievement_make"
                            android:textSize="14sp"
                            android:textColor="@color/color_table_title"
                            android:textStyle="bold"
                            android:gravity="center" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:text="@string/text_achievement_achievement_re"
                            android:textSize="14sp"
                            android:textColor="@color/color_table_title"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:text="@string/text_achievement_credit"
                            android:textSize="14sp"
                            android:textColor="@color/color_table_title"
                            android:textStyle="bold"
                            android:gravity="center"/>
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp">
                        <TextView
                            android:id="@+id/achievement_table_passed_empty"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:gravity="center"
                            android:text="@string/text_achievement_passed_empty" />
                        <LinearLayout
                            android:id="@+id/achievement_table_passed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:useDefaultMargins="false"/>
                    </FrameLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:text="@string/title_achievement_re"
                        android:textSize="15sp"
                        android:textColor="@color/color_table_title"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:padding="6dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:text="@string/text_achievement_name"
                            android:textSize="14sp"
                            android:textColor="@color/color_table_title"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:padding="6dp" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/text_achievement_achievement"
                            android:textSize="14sp"
                            android:textColor="@color/color_table_title"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:padding="6dp" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp">
                        <TextView
                            android:id="@+id/achievement_table_failed_empty"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:gravity="center"
                            android:text="@string/text_achievement_failed_empty" />
                        <LinearLayout
                            android:id="@+id/achievement_table_failed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"/>
                    </FrameLayout>
                </LinearLayout>
            </ScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>