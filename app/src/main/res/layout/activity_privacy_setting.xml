<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWindowBackground"
    android:orientation="vertical"
    tools:context="io.github.sgpublic.aidescit.activity.PrivacySetting">
    <FrameLayout
        android:id="@+id/privacy_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/privacy_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_gravity="start"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            app:tint="@color/color_font_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/title_privacy"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/color_font_normal"/>
    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorWindowBackgroundDark">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <GridLayout
                android:id="@+id/privacy_calender_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWindowBackground"
                android:foreground="?android:selectableItemBackground"
                android:padding="20dp"
                android:columnCount="3"
                android:rowCount="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_columnWeight="1"
                    android:text="@string/title_privacy_calender"
                    android:textColor="@color/color_font_normal"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="5dp"
                    android:text="@string/text_privacy_calender"
                    android:textColor="@color/color_font_normal"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/privacy_status_calender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_rowSpan="2"
                    android:textColor="@color/color_font_light"
                    android:textSize="14sp"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:layout_rowSpan="2"
                    android:padding="4dp"
                    android:src="@drawable/ic_next"
                    tools:ignore="ContentDescription"
                    app:tint="@color/color_font_dark" />
            </GridLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>