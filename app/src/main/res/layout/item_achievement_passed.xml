<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/achievement_passed_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:textSize="14sp"
        android:textColor="@color/color_table_content"
        android:lines="1"
        android:ellipsize="end"
        android:gravity="start"
        android:padding="6dp" />
    <TextView
        android:id="@+id/achievement_passed_paper"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:visibility="gone"
        android:textSize="14sp"
        android:textColor="@color/color_table_content"
        android:gravity="center"
        android:padding="6dp" />
    <TextView
        android:id="@+id/achievement_passed_mark"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:textSize="14sp"
        android:textColor="@color/color_table_content"
        android:gravity="center"
        android:padding="6dp" />
    <TextView
        android:id="@+id/achievement_passed_retake"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:textSize="14sp"
        android:textColor="@color/color_table_content"
        android:gravity="center"
        android:padding="6dp" />
    <TextView
        android:id="@+id/achievement_passed_rebuild"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:textSize="14sp"
        android:textColor="@color/color_table_content"
        android:gravity="center"
        android:padding="6dp" />
    <TextView
        android:id="@+id/achievement_passed_credit"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:visibility="gone"
        android:textSize="14sp"
        android:textColor="@color/color_table_content"
        android:gravity="center"
        android:padding="6dp" />
</LinearLayout>