<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="io.github.sgpublic.aidescit.activity.Achievement">
    <ImageView
        android:id="@+id/achievement_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="15dp"
        android:layout_gravity="start"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_back"
        app:tint="@color/color_font_normal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/title_achievement_search"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/color_font_normal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/achievement_landscape"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="12dp"
        android:layout_gravity="end"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_landscape"
        app:tint="@color/color_font_normal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Spinner
        android:id="@+id/achievement_year"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/achievement_landscape"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="14dp"
        app:layout_constraintRight_toLeftOf="@id/achievement_semester"
        app:layout_constraintHorizontal_weight="2"/>

    <Spinner
        android:id="@+id/achievement_semester"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/achievement_landscape"
        app:layout_constraintLeft_toRightOf="@id/achievement_year"
        app:layout_constraintRight_toLeftOf="@id/achievement_action"
        app:layout_constraintHorizontal_weight="1"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/achievement_action"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="14dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="19dp"
        app:cardBackgroundColor="@color/colorAlert"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/achievement_landscape"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/achievement_semester"
        app:layout_constraintHorizontal_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/text_achievement_search"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/colorPrimaryDark"/>
    </androidx.cardview.widget.CardView>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/achievement_refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/achievement_year"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/achievement_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="14dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:overScrollMode="never"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>